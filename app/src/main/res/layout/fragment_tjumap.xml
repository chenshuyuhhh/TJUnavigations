<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<com.amap.api.maps.MapView
			android:id="@+id/map"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">
		
		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<Button
					android:id="@+id/basicmap"
					android:layout_width="65dp"
					android:layout_height="32dp"
					android:background="@drawable/btn_map_poi"
					android:textColor="@color/black"
					android:textSize="12sp"
					android:text="@string/standard"
					app:layout_constraintRight_toRightOf="parent"
					android:layout_marginRight="16dp"
					android:layout_marginEnd="16dp"
					app:layout_constraintTop_toTopOf="parent"
					android:layout_marginTop="56dp"/>
			
			<Button
					android:id="@+id/rsmap"
					android:layout_width="65dp"
					android:layout_height="32dp"
					android:background="@drawable/btn_map_poi"
					android:textColor="@color/black"
					android:textSize="12sp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toBottomOf="@id/basicmap"
					android:layout_marginTop="6dp"
					android:layout_marginRight="16dp"
					android:layout_marginEnd="16dp"
					android:text="@string/rsmap"/>
			<Button
					android:id="@+id/nightmap"
					android:layout_width="65dp"
					android:layout_height="32dp"
					android:background="@drawable/btn_map_poi"
					android:textColor="@color/black"
					android:textSize="12sp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toBottomOf="@id/rsmap"
					android:layout_marginTop="6dp"
					android:layout_marginRight="16dp"
					android:layout_marginEnd="16dp"
					android:text="@string/nightmap"/>
			
			<Button
					android:id="@+id/navimap"
					android:layout_width="65dp"
					android:layout_height="32dp"
					android:background="@drawable/btn_map_poi"
					android:textColor="@color/black"
					android:textSize="12sp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toBottomOf="@id/nightmap"
					android:layout_marginTop="6dp"
					android:layout_marginRight="16dp"
					android:layout_marginEnd="16dp"
					android:text="@string/navimap"/>
		
		</android.support.constraint.ConstraintLayout>
	</com.amap.api.maps.MapView>

</android.support.constraint.ConstraintLayout>