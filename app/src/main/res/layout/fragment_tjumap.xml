<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<com.amap.api.maps.MapView
			android:id="@+id/map"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">
		
	</com.amap.api.maps.MapView>
	
	<Button
			android:id="@+id/basicmap"
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:background="@drawable/btn_map_poi"
			android:textColor="@color/black"
			android:textSize="12sp"
			android:text="@string/standard"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="60dp"/>
	
	<Button
			android:id="@+id/rsmap"
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:background="@drawable/btn_map_poi"
			android:textColor="@color/black"
			android:textSize="12sp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/basicmap"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			android:text="@string/rsmap"/>
	<Button
			android:id="@+id/nightmap"
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:background="@drawable/btn_map_poi"
			android:textColor="@color/black"
			android:textSize="12sp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/rsmap"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			android:text="@string/nightmap"/>
	
	<Button
			android:id="@+id/navimap"
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:background="@drawable/btn_map_poi"
			android:textColor="@color/black"
			android:textSize="12sp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/nightmap"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			android:text="@string/navimap"/>
	
	<android.support.v7.widget.CardView
			android:id="@+id/gps_cv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">
		
		<TextView
				android:id="@+id/gps_tv_content"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginEnd="20dp"
				android:textSize="17sp"
				android:textColor="@color/grey"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="16dp"
				tools:text="时间的保持冷静和冰冻三尺阿胶代表王俊凯的表情和饥饿的dcgvskadvckhdsvchgkadsc阿迪保持基本参数大回答不出来玩"
				android:layout_marginStart="20dp"
				android:lineSpacingMultiplier="1.25"/>
	
	</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>